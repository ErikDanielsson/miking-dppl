// Test basic evaluation of expressions.

// Test unit value
utest ()                ();

// Testing integer binary operators '+' '-' '*' '/' '%' '<<' '>>' '>>>' and unary operator '-'.
utest (3+2)             5;
utest (2+4*5)           22;
utest ((2+4)*5)         30;
utest (1+2-4)           (-1);
utest (10-(-2))          12;
utest (10/3)             3;
utest ((-21)/4+1)        (-4);
utest (10 % 3)          1;
utest (20 / 4 % 3)      2;
utest (4 + 5 / 2)       6;
utest ((4 + 5) / 2)     4;
utest (8 >> 2)          2;
utest (4 << 1)          8;
utest ((-4) >>> 1)      (-2);

// Test booleans unary op '!', and binary operators '||' and '&&'.
utest true                        true;
utest false                       false;
utest !true                       false;
utest !!false                     false;
utest (true && true)              true;
utest (false && true)             false;
utest (true && false)             false;
utest (false && false)            false;
utest (true || true)              true;
utest (false || true)             true;
utest (true || false)             true;
utest (false || false)            false;
utest (true || false && false)    true;
utest ((true || false) && false)  false;
utest (!false && false)           false;
utest (!(false && false))         true;

// Test operators '<' '>' '=' '!=''<=' and '>='
utest (7 < 10)               true;
utest ((-100) < 0)           true;
utest (55 < 1)               false;
utest (100 > 4)              true;
utest ((-100) > 5)           false;
utest (5 + 1 = 6)            true;
utest (3/4 = 1)              false;
utest (99 != (-4))           true;
utest (0 != 3-3)             false;
utest (7 <= 10)              true;
utest (7 <= 6)               false;
utest (7-10 <= 0-3)          true;
utest (100 >= 99+1)          true;
utest (100 >= 101)           false;
utest (1 < 5 && (-1) < 10)   true;
utest (1 >= 5 || 6 = 6+1)    false;

