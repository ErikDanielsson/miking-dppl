// Test different way of specifying funcions

//Test a recursive function
function fact(n) {
    if (n <= 1) then 1 else n * fact(n-1)
}

utest fact(0)   1
utest fact(1)   1
utest fact(2)   2
utest fact(3)   6
utest fact(6)   720
utest fact(12)  479001600

//Test function with zero arguments
function foo1() {
    5
}
function foo2() 8
utest foo1()    5
utest foo2()    8

//Test functions with many arguments
function foo3(x,f,str){
    f(x)
}

function incr(x) x + 3
utest foo3(8,incr,"something")          11

function foo4(f,x) {
    function internal(s1,s2) {
        f(x) ++ s1 ++ s2
    }
    internal
}
