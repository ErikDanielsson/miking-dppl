function model() {
  y1 = 2.1    y2 = 6.3   y3 = 10.7

  init_var = 4.0
  sim_var = 1.0
  obs_var = 1.0
  velocity = 4.0

  x1 ~ normal(0.0, init_var)
  observe y1 ~ normal(x1,obs_var)
  x2 ~ normal(x1 + velocity, sim_var)
  observe y2 ~ normal(x2,obs_var)
  x3 ~ normal(x2 + velocity, sim_var)
  observe y3 ~ normal(x3,obs_var)
  x4 ~ normal(x3 + velocity, sim_var)
  x4
}

infer(model)
